
{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,         // Pour permettre l'importation de fichiers JSON
    "types": ["node", "cors"],  // Ajoutez "cors" si nécessaire
    "typeRoots": ["./node_modules/@types", "./types"], // Assure-toi que les types sont bien recherchés
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}




